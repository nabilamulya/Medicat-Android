<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailEducatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/another_imageView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleText"
        android:text="Title Text"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:fontFamily="@font/bold"
        android:textSize="28sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@id/another_imageView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionText"
        android:text="Description Text"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#000000"
        android:fontFamily="@font/regular"
        android:layout_below="@id/titleText"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/judulText"
        android:text="Solusi"
        android:textColor="#000000"
        android:fontFamily="@font/bold"
        android:layout_marginTop="70dp"
        android:textSize="23dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@id/descriptionText"/>

    <TextView
        android:id="@+id/solusiText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/judulText"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:text="Solusi Text"
        android:textSize="15sp" />

    </RelativeLayout>
</ScrollView>