<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f8fc"
    android:orientation="vertical"
    tools:context=".Q1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f7f8fc">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="5dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_gravity="left"
            android:text="Diagnocat"
            android:textSize="25sp"
            android:textColor="#000000"
            android:fontFamily="@font/bold"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/txtPertanyaan"
            android:text="Kucing mengalami \bulu rontok dan kusam"
            android:gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/regular"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">

        <Button
            android:id="@+id/btnSangatPasti"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/rec_hover"
            android:text="Sangat Pasti"
            android:textAllCaps="false"
            android:textColor="#fff"
            tools:ignore="HardcodedText"
            android:theme="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/btnPasti"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/rec_hover"
            android:text="Pasti"
            android:textAllCaps="false"
            android:textColor="#fff"
            tools:ignore="HardcodedText"
            android:theme="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/btnMungkinIya"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/rec_hover"
            android:text="Kemungkinan Iya"
            android:textAllCaps="false"
            android:textColor="#fff"
            tools:ignore="HardcodedText"
            android:theme="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/btnMungkinTidak"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/rec_hover"
            android:text="Kemungkinan Tidak"
            android:textAllCaps="false"
            android:textColor="#fff"
            tools:ignore="HardcodedText"
            android:theme="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/btnTidak"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/rec_hover"
            android:text="Tidak"
            android:textAllCaps="false"
            android:textColor="#fff"
            tools:ignore="HardcodedText"
            android:theme="@style/Widget.AppCompat.Button.Borderless"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Kembali_1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginEnd="150dp"
                android:background="@drawable/circle_hover"
                android:drawableLeft="@drawable/ic_back_fff"
                android:text="Kembali"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:theme="@style/Widget.AppCompat.Button.Borderless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/Lanjut_1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="150dp"
                android:background="@drawable/circle_hover"
                android:drawableRight="@drawable/ic_next_fff"
                android:text="Lanjut"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:theme="@style/Widget.AppCompat.Button.Borderless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>