<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f8fc"
    tools:context=".Q2Activity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="5dp"
        android:background="#ffffff">

        <ImageButton
            android:id="@+id/imgB_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_hover"
            android:src="@drawable/ic_back_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_gravity="left"
            android:text="Features"
            android:textSize="25sp"
            android:textColor="#000000"
            android:fontFamily="@font/bold"/>

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f8fc"
        android:orientation="vertical">

    <TextView
        android:text="Kucing mengalami \nbatuk"
        android:gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/regular"
        android:textColor="#000"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle_hover"
        android:drawableTint="@color/button_kuesioner"
        android:text="Sangat Yakin"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:theme="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/circle_hover"
        android:drawableTint="@color/button_kuesioner"
        android:text="Yakin"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:theme="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/circle_hover"
        android:drawableTint="@color/button_kuesioner"
        android:text="Cukup Yakin"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:theme="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/circle_hover"
        android:drawableTint="@color/button_kuesioner"
        android:text="Mungkin"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:theme="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/circle_hover"
        android:drawableTint="@color/button_kuesioner"
        android:text="Tidak"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:theme="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Kembali_2"
            android:text="Kembali"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="80dp"
            android:textAllCaps="false"
            android:drawableRight="@drawable/ic_next_arrow"
            android:background="@drawable/circle_hover"
            android:theme="@style/Widget.AppCompat.Button.Borderless"/>


    </LinearLayout>




</LinearLayout>